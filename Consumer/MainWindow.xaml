<Window x:Class="STDISCM_PS_3___Networked_Producer_and_Consumer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STDISCM_PS_3___Networked_Producer_and_Consumer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel
            Grid.Row="0"
            Margin="10,10,10,10"
            Width="Auto"
            Height="Auto"
            Orientation="Horizontal"
            >
            <Button 
                x:Name="connectBtn" 
                Content="Connect" 
                Width="75" 
                Click="connectBtn_Click"
                />

            <Button 
                x:Name="downloadBtn" 
                Content="Download" 
                Width="75" 
                Margin="10, 0, 0, 0"
                Click="downloadBtn_Click"
                />
        </WrapPanel>

        <Grid
            Grid.Row="1"
            Margin="10,10,10,10"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border 
                Grid.Column="0"
                BorderBrush="Black" 
                BorderThickness="1" 
                >

                <ListBox 
                    x:Name="VideoList" 
                    >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <EventSetter Event="MouseEnter" Handler="ListBoxItem_MouseEnter"/>
                            <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

            </Border>

            <Border 
                Grid.Column="1"
                BorderBrush="Black" 
                BorderThickness="1" 
                >

                <MediaElement 
                    Grid.Column="1"
                    x:Name="PreviewPlayer" 
                    Width="300" 
                    Height="200"
                    LoadedBehavior="Manual"
                    UnloadedBehavior="Manual"
                    />

            </Border>

        </Grid>

    </Grid>
    
</Window>
